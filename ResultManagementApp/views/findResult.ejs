<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="container-fluid">
        <%-include("./partials/header")%>
            <div class="container my-4">
                <h2 class="border-bottom border-2 border-success mb-3">Find Result</h2>
                <h2>Hello <%=name%></h2>
                <div class="border border-dark rounded p-3 col-8">
                    <form action="/findResult" method="post">
                        <div class="mb-3">
                            <label for="rollNo" class="form-label">Roll No.</label>
                            <input type="number" class="form-control" id="rollNo" name="roll"
                                placeholder="enter roll no." required>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="enter name" onchange="validateName()" required>
                            <span id="nameError" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Search</button>
                            <button type="reset" class="btn btn-secondary">Clear</button>
                        </div>
                    </form>
                </div>

            </div>
    </div>
    <script>
        function validateName() {
            var name = document.getElementById("name").value;
            console.log(name);
            let regExCheck = name.search(/[0-9]/g);
            if (regExCheck != -1) {
                document.getElementById("nameError").innerHTML = `<i class="fas fa-exclamation-circle"></i> name cannnot contain a number`;
            } else {
                document.getElementById("nameError").innerHTML = "";
            }
        }
    </script>
</body>

</html>